<Window x:Class="RentACar.Domain.Views.Windows.EnterIDWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RentACar.Domain.Views.Windows"
        mc:Ignorable="d"
        Title="EnterIDWindow" Height="125" Width="250">
    <Grid Background="White">
        <StackPanel>
            <Label Margin="10" HorizontalContentAlignment="Center" 
                       Foreground="Red" FontWeight="Black">Enter Forum</Label>

            <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                <Label>Enter ID</Label>
                <TextBox  Text="{Binding Id, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="145"></TextBox>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
